{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017", "esnext", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"]
}
